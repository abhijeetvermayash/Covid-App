<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CitizenLoginOrRegister">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Covid App"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/welcome_text"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Register or Sign In to continue"
        android:layout_below="@+id/welcome_text"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_marginTop="18dp"
        android:id="@+id/message_text"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:id="@+id/field_ll">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etmail"
        android:hint="Enter Your email ID"
        android:layout_below="@+id/message_text"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"></EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etpass"
            android:hint="Enter Your Password"
            android:layout_margin="20dp"
            android:inputType="textPassword"></EditText>

    </LinearLayout>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Login"
    android:id="@+id/loginbut"
    android:textStyle="bold"
    android:background="#eca1a6"
    android:layout_below="@+id/field_ll"
    android:layout_centerHorizontal="true"
    ></Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?\nRegister Now!"
        android:layout_margin="20dp"
        android:id="@+id/regbuttononmainpage"
        android:layout_below="@+id/loginbut"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:background="#d6cbd3"
        ></Button>
</RelativeLayout>